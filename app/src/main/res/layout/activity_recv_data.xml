<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#467ce7"
    tools:context="com.example.khokan.datagelodataelo.RecvDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#f2d830"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:weightSum="3"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="MY PROFILE "
               android:textAlignment="center"
               android:background="@drawable/button_selected"
               android:textSize="20sp"
               android:padding="5dp"
               android:textColor="#fff"
               android:layout_marginBottom="5dp"
               android:textStyle="bold"
               />


               <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:id="@+id/profile_image"
                   android:layout_width="120dp"
                   android:layout_height="96dp"
                   android:layout_gravity="center"
                   android:layout_marginBottom="5dp"
                   android:layout_weight="1"
                   android:src="@drawable/khokan"
                   app:civ_border_color="#2b3594"
                   app:civ_border_width="2dp" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="monospace"
               android:textAlignment="center"
               android:padding="10dp"
               android:layout_marginBottom="5dp"
               android:id="@+id/userName"
               android:text=" "
               android:textAllCaps="true"
               android:textStyle="bold"
               android:background="@drawable/button_selected"
               android:textColor="#fff"
               android:textCursorDrawable="@drawable/khokan"
               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="3"
               >

               <Button
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Upload"
                   android:layout_weight="1"
                   android:textSize="12sp"
                   android:id="@+id/upload"
                   android:textColor="#fff"
                   android:textAlignment="center"
                   android:textStyle="bold"
                   android:background="@drawable/button_selected"
                   android:layout_marginRight="5dp"
                   />
               <Button
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="delete-image"
                   android:layout_weight="1"
                   android:textSize="12sp"
                   android:textColor="#fff"
                   android:textStyle="bold"
                   android:id="@+id/delete_image"
                   android:background="@drawable/button_selected"
                   android:layout_marginRight="5dp"
                   />
               <Button
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Edit Profile"
                   android:layout_weight="1"
                   android:textSize="12sp"
                   android:id="@+id/edit_profile"
                   android:textStyle="bold"
                   android:textColor="#fff"
                   android:textAlignment="center"
                   android:background="@drawable/button_selected"
                   />


           </LinearLayout>


       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NAME : "
                android:padding="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/rname"
                android:textColor="#da4343"
                android:textStyle="italic"
                android:textSize="15sp"
                android:textAllCaps="true"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FATHER : "
                android:padding="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/rfather"
                android:textColor="#da4343"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text=""
                android:textAllCaps="true"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MOTHER : "
                android:padding="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/rmother"
                android:textColor="#da4343"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text=""
                android:textAllCaps="true"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AGE : "
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/rage"
                android:textColor="#da4343"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text=""
                android:textAllCaps="true"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PHONE : "
                android:padding="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/rphone"
                android:textColor="#da4343"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text=""
                android:textAllCaps="true"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GENDER : "
                android:padding="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/rgender"
                android:textColor="#da4343"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text=""
                android:textAllCaps="true"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_weight="1">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="call"
                    android:id="@+id/callme"
                    android:textColor="#fff"
                    android:background="@drawable/button_selected"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SMS"
                    android:id="@+id/sendmeSms"
                    android:background="@drawable/button_selected"
                    android:textColor="#fff"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mail"
                    android:background="@drawable/button_selected"
                    android:textColor="#fff"
                    android:id="@+id/senMail"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_gravity="center"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="done"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:id="@+id/done"
                android:textAlignment="center"
                android:background="@drawable/button_selected"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="#fff"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"


                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
